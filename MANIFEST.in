# Include essential files
include LICENSE
include README.md
include pyproject.toml
include setup.py
include CMakeLists.txt
recursive-include cmake *
recursive-include setup-tools *

# Include package code
recursive-include candles_feed *.py
recursive-include candles_feed *.pyx
recursive-include candles_feed *.pxd

# Include docs
recursive-include docs *.md
recursive-include docs *.yml
recursive-include docs *.py

# Exclude build artifacts and cache
recursive-exclude * __pycache__
recursive-exclude * *.py[cod]
recursive-exclude * *.so
recursive-exclude * *.dylib
recursive-exclude * *.c
recursive-exclude * *.cpp
recursive-exclude * .DS_Store
recursive-exclude .git *
recursive-exclude dist *
recursive-exclude build *
recursive-exclude _skbuild *
